%div
  %p
    %b Login
    you manage your listing
= form_tag "/auth/identity/callback", :class => 'form-inline', :id => "lm", :target => "_top" do
  %label Email:
  = email_field_tag :auth_key, nil, :class => "input-small", :placeholder => "email", :class => "span2"
  %br
  %label Password
  = password_field_tag :password, nil, :class => "input-small", :placeholder => "password", :class => "span2"
  = submit_tag "Login", :class => "btn btn-primary"

